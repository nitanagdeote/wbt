---
const { title, image, link, description } = Astro.props;
---

<a href={link} class="block rounded-lg overflow-hidden shadow hover:shadow-lg transition transform hover:-translate-y-1 bg-white">
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover"
    loading="lazy"
  />
  <div class="p-4">
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-gray-600 text-sm">{description}</p>
  </div>
</a>
